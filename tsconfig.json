{
  "compilerOptions": {
    "target": "es2017",
    "module": "es2015",
    "jsx": "react-jsx",
    "outDir": "dist",

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,

    "moduleResolution": "node",
    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"]
}
